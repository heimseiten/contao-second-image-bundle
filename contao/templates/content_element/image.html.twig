{% extends "@Contao/content_element/image.html.twig" %}

{% if data.addImage_2 %}
    {% set attributes = attrs(attributes|default).addClass('media--second_image') %}
{% endif %}

{% block figure_component %}

        {% if data.addImage_2 %}
            <figure class="images_container">
            {{ parent() }}    
                {{ contao_figure(
                    data.singleSRC_2, 
                    data.size_2, 
                    { 
                        options: { attr: { class: 'second_image' } }
                    }
                ) }}
            </figure>
        {% else %}
            {{ parent() }}
        {% endif %}
        
{% endblock %}  
